<!--Customer list main image-->
<div class="hero-image">
    <img src="/images/smart_dog_typing_on_computer.jpg" id="hero-image" alt="Dog with glasses typing on computer">
    <div class="centered-5">Customers</div>
</div>

<br><br>
<h1>Customers List</h1>
<hr>
<br>

<div class="card" id="customers-list">
    <% if(customers.length > 0){ %>
    <table class="table">
        <tr>
            <th>User Name</th>
            <th>Email</th>
        </tr>
        <tbody>
            <% customers.forEach(function(customer){ %>
        <tr>
            <td>
                <%= customer.customerId %>
            </td>
            <td>
                <%= customer.email %>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <h3 style="text-align: center; padding: 10px; font-size: 16pt; font-weight: 100;">
            Customers haven't yet been added to the MongoDB database.<br>Try Adding Some!
        </h3>
        <% } %> 
</div>
